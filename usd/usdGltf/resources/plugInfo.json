{
    "Plugins": [
        {
            "Info": {
                "SdfMetadata": {
                    "gltfAssetsPath": {
                        "appliesTo": [ "prims" ], 
                        "displayGroup": "Core", 
                        "documentation:": "Path to store assets to, instead of resolving from the source file", 
                        "type": "string"
                    }
                },
                "Types": {
                    "UsdGltfFileFormat": {
                        "bases": ["SdfFileFormat"],
                        "displayName": "GLTF file format",
                        "extensions": [ "gltf", "glb" ],
                        "formatId": "gltf",
                        "primary": true,
                        "target": "usd"
                    },
                    "adobe::usd::GltfResolver" : {
                        "bases": [ "ArPackageResolver" ],
                        "extensions": [ "gltf", "glb" ]
                    }
                }
            },
            "LibraryPath": "",
            "Name": "usdGltf_plugin",
            "ResourcePath": "resources",
            "Root": "..",
            "Type": "library",
            "Entitlements": [["com.apple.private.usd.enableusdgltf"]]
        }
    ]
}
